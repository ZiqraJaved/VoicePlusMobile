<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    tools:context=".ui.adminpanel.editdeleteitem.EditDeleteItemFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/design_default_color_secondary"
                android:gravity="center_horizontal"
                android:text="Item Description"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manageItem_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center_horizontal"
                android:hint="Mobile Brand"

                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/manageItem_model_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:gravity="center_horizontal"
                android:hint="Mobile Model"

                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/manageItem_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_services" />

            <TextView
                android:id="@+id/manageItem_part_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:hint="Product Name"

                android:textAlignment="center"

                android:textSize="36sp" />

            <TextView
                android:id="@+id/manageItem_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:gravity="center_horizontal"
                android:hint="Product Price"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/manageItem_details"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@color/design_default_color_secondary_variant"
                android:hint="Product Description"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/information_button"
                    android:text="Edit Item"

                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"


                    android:layout_weight="1"
                    android:background="@drawable/information_button"
                    android:text="Delete Item"

                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>