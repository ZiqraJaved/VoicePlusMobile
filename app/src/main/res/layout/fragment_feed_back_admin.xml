<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feedbackreview.FeedBackAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/tech_headline"
            android:gravity="center_horizontal"
            android:text="Customer Feedback"
            android:textSize="30sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Customer Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feed_back_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="20dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Customer Phone Number"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feed_back_customer_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Customer Message"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feed_back_customer_message"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:inputType="textImeMultiLine"
            android:textSize="20dp" />


    </LinearLayout>
</FrameLayout>