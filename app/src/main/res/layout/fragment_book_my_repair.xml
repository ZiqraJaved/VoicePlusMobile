<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    tools:context=".ui.bookmyrepair.BookMyRepair">

    <TextView

        android:id="@+id/txt_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:text="We Bring your Device back to Life ðŸ™‚"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_bookmyrepair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="Book Your Repair"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:text="Instructions*"
        android:textColor="@color/design_default_color_error"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="180dp"
        android:layout_marginRight="20dp"
        android:text="Fill the Quote form and our sales team will get back to you with a competitive price for your mobile repair, by clicking 'submit' button, you are agree to Voice Plus Mobiles term and conditions."
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:text="Select Mobile Brand"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/book_repair_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Mobile Brand like 'Apple'" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        android:text="Mobile Model No. "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/book_repair_mobile_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="360dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Mobile Model Number like 'iphone 5s'" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410dp"

        android:text="What is the Problem? "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/book_repair_mobile_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="430dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Mobile problem like 'Water Damage'" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="480dp"

        android:text="File Upload, if any? "
        android:textStyle="bold" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/txt_choosefile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="No File Choose"

            >

        </EditText>

        <Button
            android:id="@+id/btn_chooseimage"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_choosefile"
            android:layout_alignRight="@+id/txt_choosefile"
            android:layout_alignBottom="@+id/txt_choosefile"
            android:padding="5dp"
            android:src="@drawable/information_button"
            android:text="Choose File" />

    </RelativeLayout>

    <CheckBox
        android:id="@+id/checkbox_book_repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:text="Terms and Conditions"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_apply_repair"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="600dp"
            android:layout_weight="1"
            android:background="@drawable/information_button"
            android:text="Apply Repair" />

        <Button
            android:id="@+id/book_repair_cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="600dp"
            android:layout_weight="1"
            android:background="@drawable/information_button"
            android:text="Back" />
    </LinearLayout>

</FrameLayout>