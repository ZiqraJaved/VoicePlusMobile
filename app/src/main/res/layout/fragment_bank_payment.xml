<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@color/design_default_color_secondary"
    tools:context=".ui.bankpayment.BankPayment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/design_default_color_secondary"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank Payment"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You will be redirect to EasyPaisa / JazzCash page to complete the payment. Make the payment within 60 seconds of clicking the pay securely button. If you want to pay online you choose one of this method to pay your bills."
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Payment Method"
            android:textColor="@color/design_default_color_error"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_easypaisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Via Easypaisa"
           android:layout_marginTop="20dp"
            android:background="@drawable/information_button"
            />
        <Button
            android:id="@+id/btn_jazzcash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Via Jazz Cash"
            android:layout_marginTop="20dp"
            android:background="@drawable/information_button"
            />


    </LinearLayout>

</ScrollView>
</FrameLayout>