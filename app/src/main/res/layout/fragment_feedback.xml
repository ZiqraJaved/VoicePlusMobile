<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feedbackreview.feedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tech_headline"
                android:text="Feed back / Contact Us"
                android:gravity="center_horizontal"
                android:background="@color/design_default_color_secondary"
                android:textSize="26sp"></TextView>

            <TextView
                android:background="@color/design_default_color_secondary"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Your Feedback"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Your Name"
                android:textSize="18sp"
                android:background="@color/design_default_color_secondary"
                />

            <EditText
                android:background="@color/design_default_color_secondary"

                android:id="@+id/feed_back_your_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>


            <TextView
                android:background="@color/design_default_color_secondary"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Your Phone Number"
                android:textSize="18sp" />

            <EditText
                android:background="@color/design_default_color_secondary"

                android:id="@+id/feed_back_your_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"></EditText>

            <TextView
                android:background="@color/design_default_color_secondary"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Your Message"
                android:textSize="18sp" />

            <EditText
                android:background="@color/design_default_color_secondary"

                android:id="@+id/feed_back_your_message"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:inputType="textImeMultiLine"></EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:background="@drawable/information_button"/>
        </LinearLayout>

    </ScrollView>
</FrameLayout>