<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    tools:context=".ui.adminpanel.additemmanagement.AddItemManagementFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Please insert data in desire filled to add new item."
            android:layout_marginBottom="20dp"

            android:textSize="20dp"
            android:textColor="@color/design_default_color_error"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mobile Company"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/admin_item_brand"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Company Name"

            />
        <View style="@style/proifleDetailsView" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mobile Model"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/admin_item_model"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Enter Mobile Model"
           />
        <View style="@style/proifleDetailsView" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Part/product Name"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/admin_item_product_name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product Name"
/>
        <View style="@style/proifleDetailsView" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Product Price"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/admin_item_price"
            android:padding="5dp"
            android:hint="Enter Porduct Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          />
        <View style="@style/proifleDetailsView" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Product Description"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/admin_repairing_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/ret_background"
            android:inputType="textImeMultiLine"
            android:lines="10"
            android:hint="Enter Product Description"
            android:maxLines="10" />
        <View style="@style/proifleDetailsView" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Product Image"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >


            <TextView
                android:id="@+id/admin_txt_image_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="No File Choose"
                android:textSize="20dp"

                >

            </TextView>

            <Button
                android:id="@+id/btn_admin_choose_file"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/admin_txt_image_file"
                android:layout_alignRight="@+id/admin_txt_image_file"
                android:layout_alignBottom="@+id/admin_txt_image_file"
                android:padding="5dp"
                android:background="@drawable/information_button"
                android:src="@drawable/information_button"
                android:text="Choose File" />

        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            >
            <Button
                android:layout_weight="1"
                android:id="@+id/admin_add_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/information_button"
                android:text="Add Item"

                />
            <Button

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/btn_add_item_cancel"

                android:background="@drawable/information_button"
                android:text="Cancel"
                android:layout_marginLeft="5dp"

                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</FrameLayout>