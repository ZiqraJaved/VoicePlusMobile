<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adminpanel.admin.AdminPanelFragment">



<TextView
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Admin Panel"
    android:textAlignment="center"
    android:textStyle="bold"
    android:gravity="center_horizontal"
    android:textSize="48sp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"

        >
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Manage Item"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/information_button"
            android:drawableBottom="@drawable/manageitem"
            />
        <Button
            android:layout_weight="1"
            android:background="@drawable/information_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Manage Order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableBottom="@drawable/manageorder"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="280dp"
        android:orientation="horizontal"
        android:textSize="20sp"
        android:textStyle="bold"

        >
        <Button
            android:layout_weight="1"
            android:background="@drawable/information_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ChatBox"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableBottom="@drawable/chatboxx"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Manage Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/information_button"
            android:drawableBottom="@drawable/manageprofilee"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="500dp"
        android:orientation="horizontal"

        >
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bank Account"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableBottom="@drawable/bank"
            android:background="@drawable/information_button"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Feedbacks"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableBottom="@drawable/feedback"
            android:background="@drawable/information_button"
            />


    </LinearLayout>





</FrameLayout>